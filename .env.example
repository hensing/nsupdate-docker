# Example environment variables for nsupdate.info
# Copy this file to .env and fill in your own values.

# --- REQUIRED ON FIRST RUN ---
# Set a secure password for the administrative superuser.
# This is mandatory for the container's initial startup.
DJANGO_SUPERUSER_PASSWORD=your-super-secret-password

# --- HIGHLY RECOMMENDED FOR PRODUCTION ---
# A long, random string used for cryptographic signing.
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-very-long-and-random-secret-key

# The username for the administrative superuser.
DJANGO_SUPERUSER_USERNAME=admin

# --- OPTIONAL ---
# The email for the administrative superuser.
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com