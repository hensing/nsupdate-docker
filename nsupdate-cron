# Environment variables for Django
SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
DJANGO_SETTINGS_MODULE=local_settings
PYTHONPATH=/app/src

# run cleanoldsessions command every day at 3:30 AM
30 3 * * * www-data cd /app && django-admin cleanoldsessions

# reinitialize the test user:
50 2 * * * www-data cd /app && django-admin testuser

# reset the fault counters:
55 2 * * 6 www-data cd /app && django-admin faults --flag-abuse=150 --reset-client --notify-user

# clear expired sessions from the database, use your correct settings module:
0  3 * * * www-data cd /app && django-admin clearsessions

# clear outdated registrations:
30 3 * * * www-data cd /app && django-admin cleanupregistration

# check whether the domain nameservers are reachable / answer queries:
0  4 * * * www-data cd /app && django-admin domains --check --notify-user
